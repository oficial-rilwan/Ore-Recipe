<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/header') %>

<body>
  <header class="p-4">
    <div class="row align-items-center">
      <div class="col">
        <div>
          <%- include ('./partials/logo') %>
        </div>
      </div>
      <div class="col">
        <%- include ('./partials/search-bar') %>
      </div>
      <div class="col">
        <%- include ('./partials/user-menu') %>
      </div>
    </div>
  </header>
  <main>
    <div class="container-xl py-5">
      <div class="fs-5 mb-4">Search results for: <span class="fs-3 fw-bold"><%= query %></span></div>
      <%if(!recipes.length){%>
      <div class="py-5">
        <div class="text-center fw-bold fs-3">0 results found for your search.</div>
        <div class="fw-medium fs-6 text-center">Please try another search term</div>
      </div>
      <%}%>
      <div class="row">
        <%for (const item of recipes){ %>
      <div class="col-12 col-md-4 col-lg-3 mb-4">
        <a style="color: inherit; text-decoration: none;" class="" href="/recipe/<%= item._id %>">
          <img class="mb-3" style="width: 100%; height: 200px; object-fit: cover;" src="<%= item.imageURL %>" alt="<%= item.name %>">
          <div>
            <div class="fs-5 fw-bold"><%= item.name %></div>
            <div><small class="text-secondary"><%= item.categories.join(", ") %></small></div>
            <div><small class="text-secondary"><%= item.calories %> calories</small></div>

          </div>
        </a>
      </div>
      <%}%>

      </div>
    </div>
  </main>
</body>

</html>